<!-- Hero -->
<div class="relative overflow-hidden">
  <div class="mx-auto max-w-screen-md py-12 px-4 sm:px-6 md:max-w-screen-xl md:py-20 lg:py-32 md:px-8">
    <div class="md:pe-8 md:w-1/2 xl:pe-0 xl:w-5/12">
      <!-- Title -->
      <h1 id="external-login-description" class="text-3xl text-gray-800 font-bold md:text-4xl md:leading-tight lg:text-5xl lg:leading-tight dark:text-gray-200">
        You've successfully authenticated with <span class="text-blue-600 dark:text-blue-500">@Model.ProviderDisplayName</span>.
      </h1>
      <p class="mt-3 text-base text-gray-500">
         Please enter an personal details for this site below and click the Register button to finish
    logging in..
      </p>
      <!-- End Title -->

    


      <!-- Form -->
      <form  asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-4">
          <label asp-for="Input.Email" class="block text-sm font-medium dark:text-white"><span class="sr-only">Email</span></label>
          <input type="text" asp-for="Input.Email" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600 form-control" placeholder="Email">
      <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
   
        

       

        <div class="grid">
          <button type="submit" class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">Register</button>
        </div>
      </form>
      <!-- End Form -->
    </div>
  </div>

  <div class="hidden md:block md:absolute md:top-0 md:start-1/2 md:end-0 h-full bg-[url('https://images.unsplash.com/photo-1606868306217-dbf5046868d2?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1981&q=80')] bg-no-repeat bg-center bg-cover"></div>
