                            </svg>
                        </button>
                    </div>
                    </form>
                            }

                              @if(@provider.DisplayName == "Google")
                            {
                                 <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                   <div>
                                       
                 <button type="submit" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
