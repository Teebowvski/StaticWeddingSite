<body class="bg-gray-100">


<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
         <a asp-controller="Home" asp-action="Index">
        <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark.svg?color=dark" alt="FamousBoutique">
        </a>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Sign in </h2>
      
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" id="account" method="post">
                  <div asp-validation-summary="All" class="text-danger"></div>
                <div>
                    <label  asp-for="Input.Email" class="block text-sm font-medium text-gray-700"> Email address </label>
                    <div class="mt-1">
                        <input asp-for="Input.Email"  autocomplete="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                   <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Input.Password"  class="block text-sm font-medium text-gray-700"> Password </label>
                    <div class="mt-1">
                    
                        <input asp-for="Input.Password" type="password" autocomplete="current-password" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                        <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">   @Html.DisplayNameFor(m => m.Input.RememberMe) </label>
                    </div>

                    <div class="text-sm">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password? </a>
                    </div>
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Sign in</button>
                </div>
            </form>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500"> Or continue with </span>
                    </div>
                </div>

                <div class="mt-6 grid grid-cols-2 gap-3">


                     @foreach (var provider in Model.ExternalLogins)
                                {
                                    

                            @if(@provider.DisplayName == "Facebook")
